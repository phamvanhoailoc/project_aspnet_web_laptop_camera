@model IEnumerable<WebApp_camera_laptop.Models.ProductCategori>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="breadcrumb__area box-plr-75">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xxl-12">
                <div class="breadcrumb__wrapper">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home">Trang chủ</a></li>
                            <li class="breadcrumb-item active" aria-current="page"><a></a>Quản lý danh mục - sản phẩm</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="col-xs-12">
    <div class="box-content">
        <h4 class="box-title">Danh sách danh mục - sản phẩm</h4>
        <div class="dropdown js__drop_down">
            <a class="btn btn-info btn-xs waves-effect waves-light" asp-area="Admin" asp-controller="AdminProductCategoris" asp-action="Create">Thêm danh mục - sản phẩm</a>
            <!-- /.sub-menu -->
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col" class="col-1">ID</th>
                    <th scope="col" class="col-3">Tên danh mục</th>
                    <th scope="col" class="col-5">Tên sản phẩm</th>
                    <th scope="col" class="col-3">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row" class="col-1">@item.ProductCatId</th>
                            <td class="col-3">@item.Cat.CatName</td>
                            <td class="col-5">@item.Products.ProductName</td>
                            <td class="col-3">
                                <div class="d-flex justify-content-between">
                                    <a class="btn btn-info btn-xs waves-effect waves-light" asp-area="Admin" asp-controller="AdminProductCategoris" asp-action="Details" asp-route-id="@item.ProductCatId">Chi tiết</a>
                                    <a class="btn btn-primary btn-xs waves-effect waves-light" asp-area="Admin" asp-controller="AdminProductCategoris" asp-action="Edit" asp-route-id="@item.ProductCatId">Cập nhật</a>
                                    <a class="btn btn-danger btn-xs waves-effect waves-light" asp-area="Admin" asp-controller="AdminProductCategoris" asp-action="Delete" asp-route-id="@item.ProductCatId">Xóa</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <!-- /.box-content -->
</div>

