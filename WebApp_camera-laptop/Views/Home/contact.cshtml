<main>

    <!-- contact map area start -->
    <section class="contact__area">
        <div class="container-fluid p-0">
            <div class="row gx-0">
                <div class="col-xxl-12">
                    <div class="contact__map">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.8045325451913!2d106.71714947873218!3d10.749542910247959!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f39454beed9%3A0x7335c73739234eed!2zQ8OUTkcgTkdI4buGIFBIxq_GoE5HIFbFqA!5e0!3m2!1sen!2s!4v1697370401075!5m2!1sen!2s" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
